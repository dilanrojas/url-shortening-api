---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

	:root {
		--ff-html: "Poppins", sans-serif;

		--cyan: hsl(180, 66%, 49%);
		--d-violet: hsl(257, 27%, 26%);
		--red: hsl(0, 87%, 67%);
		--red-op: hsla(0, 87%, 67%, 0.55);
		--gray: hsl(0, 0%, 75%);
		--grayish-violet: hsl(257, 7%, 63%);
		--vd-blue: hsl(255, 11%, 22%);
		--vd-violet: hsl(260, 8%, 14%);
		--white: hsl(0, 0%, 100%);
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 1.15;
		color: var(--vd-blue)
	}

	button {
		border: 0;
		cursor: pointer;
		font-size: inherit;
		font-family: inherit;
		font-weight: inherit;
		color: currentColor;
		background-color: transparent;
	}

	input, text-area {
		font-size: inherit;
		font-family: inherit;
		color: currentColor;
		border: 0;
		outline: 0;
	}

	input:focus,
	input:active {
		outline: 0;
		border: 0;
	}

	html {
		line-height: 1.7;
		font-family: var(--ff-html);
		font-size: 18px;
    color: var(--grayish-violet);
		overflow-x: hidden;
		scrollbar-gutter: stable;
	}
	
	html:has(.no-scroll) {
		overflow-y: hidden;
	}

	body { overflow-x: hidden }

	ul, ol { list-style-type: none }

	a {
		text-decoration: none;
		color: currentColor;
	}

	/* Utility classes */
	.wrapper {
		--width: var(--custom-width, 1180px);
		--padding: var(--custom-padding, 3rem);

		width: min(var(--width), (100% - var(--padding)));
		margin-inline: auto;
	}

	.button {
		background-color: var(--cyan);
		transition: background-color .1s ease-in-out;

		&:hover { background-color: #9be3e2 }
	}

  .get-started-button {
    margin-top: 2rem;
    font-weight: 600;
    font-size: 1.15rem;
    padding: .8rem 2.2rem;
    border-radius: 40px;
    color: var(--white)
  }
</style>
